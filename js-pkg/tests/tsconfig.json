{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "declaration": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "types": ["bun-types"]
    },
    "exclude": [
        "node_modules",
        "dist",
        "tests"
    ]
}
